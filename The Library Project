void print_book_managment()
{
    system("cls");

    printf("Book Management:\n");
    printf("1.Insert Book\n");
    printf("2.Search for a Book \n");
    printf("3.Add new copy\n");
    printf("4.Delete Book\n");
    printf("5.Edit\n");
}
